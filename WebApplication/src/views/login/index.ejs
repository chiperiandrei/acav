<div class="account-wrapper">
    <div class="account-container">
        <div class="account">
            <h2>Connect with Us!</h2>
            <form action="/login" method="POST">
                <div class="form-container">
                    <label for="email"><i class="fas fa-at"></i> Email</label>
                    <input type="email" id="email" name="email" required>
                    <label for="password"><i class="fas fa-key"></i> Password</label>
                    <input type="password" id="password" name="password"
                           pattern=".{1,}"
                           title="Password must have at least 8 characters."
                           required>
                </div>
                <div class="error-message"><%= message %></div>
                <button type="submit" class="button button-submit">Login <i class="fas fa-hand-pointer"></i></button>
            </form>
        </div>
        <div class="description-container">
            <%- include('../layout/includes/description.ejs') %>
            <div class="register-container">
                <a href="/register" class="button button-opaque15">I don't have an account!</a>
            </div>
        </div>
    </div>
</div>