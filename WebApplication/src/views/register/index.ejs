<div class="account-wrapper">
    <div class="account-container">
        <div class="account">
            <h2>Create your own account!</h2>
            <form action="/register" method="POST">
                <div class="form-container">
                    <label for="email"><i class="fas fa-at"></i> Email</label>
                    <input type="email" id="email" name="email" required>
                    <label for="password"><i class="fas fa-key"></i> Password</label>
                    <input type="password" id="password" name="password"
                           pattern=".{1,}"
                           title="Password must have at least 8 characters."
                           required>
                    <label for="repeat-password"><i class="fas fa-key"></i> Repeat password</label>
                    <input type="password" id="repeat-password" name="repeat-password"
                           pattern=".{1,}"
                           title="Password must have at least 8 characters."
                           required>
                </div>
                <div class="error-message"></div>
                <button type="submit" class="button button-submit">Sign Up</button>
            </form>
        </div>
        <div class="description-container">
            <%- include('../layout/includes/description.ejs') %>
            <div class="register-container">
                <a href="/login" class="button button-opaque15">I already have an account!</a>
            </div>
        </div>
    </div>
</div>